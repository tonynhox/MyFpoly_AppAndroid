<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ECECEC">

    <!-- Dropdown Picker -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:background="@drawable/spinner_custom_background"
        android:layout_height="wrap_content">

        <Spinner
            android:background="@drawable/radiuis_custom"
            android:id="@+id/spnLichThi"
            android:layout_width="match_parent"
            android:layout_height="48sp"
            android:entries="@array/lichhoc_options"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/avatar_circle_white"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:paddingTop="20dp"
        >
        <TextView
            android:paddingLeft="10dp"
            android:id="@+id/textNgay"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Ngày"
            android:layout_marginBottom="8dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#333333"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="#333333" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Môn Thi"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#333333"
            android:textSize="16sp"

            />

    </LinearLayout>

    <!-- RecyclerView for the list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewLichThi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/spnLichThi"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"/>

    <!-- Divider -->
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/recyclerViewLichThi"
        android:background="@android:color/darker_gray"
        tools:ignore="UnknownId" />

</LinearLayout>
